<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addLayout"
    android:layout_width="0dp"
    android:layout_height="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/addElementsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI Elements"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/achalRed" />

        <include layout="@layout/elements_popup" 
            	android:id="@+id/elements_popup" />

        <TextView
            android:id="@+id/addShapesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shapes"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/achalRed" />

        <include layout="@layout/shape_popup" />

        <TextView
            android:id="@+id/addCustomElementsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/achalRed" />
        
        <Button
            android:id="@+id/sketchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pencil"
            />
    </LinearLayout>

</ScrollView>