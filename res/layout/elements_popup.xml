    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/elementsGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3" >

        <ImageView
            android:id="@+id/ma_button"
            android:layout_width="@dimen/elementsPopupElementWidth"
            android:layout_height="@dimen/elementsPopupElementHeight"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ma_text_label"
            android:layout_width="@dimen/elementsPopupElementWidth"
            android:layout_height="@dimen/elementsPopupElementHeight"
            android:text="Text Label"
            android:textColor="@color/black"
            android:textSize="30sp" />
        
        <ImageView 
            android:id="@+id/ma_slider"
            android:layout_width="@dimen/elementsPopupElementWidth"
            android:layout_height="@dimen/elementsPopupElementHeight" />
        
        <ImageView 
            android:id="@+id/ma_checkbox"
            android:layout_width="@dimen/elementsPopupElementWidth"
            android:layout_height="@dimen/elementsPopupElementHeight"
            />

        <ImageView 
            android:id="@+id/ma_radiobutton"
            android:layout_width="@dimen/elementsPopupElementWidth"
            android:layout_height="@dimen/elementsPopupElementHeight"
            />
        
        <ImageView
            android:id="@+id/ma_toggle"
            android:layout_width="@dimen/elementsPopupElementWidth"
            android:layout_height="@dimen/elementsPopupElementHeight"
            />
    </GridLayout>

