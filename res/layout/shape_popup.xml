    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/shapesGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4" >

        <ImageView
            android:layout_width="@dimen/shapesPopupShapeWidth"
            android:layout_height="@dimen/shapesPopupShapeHeight" 
            android:id="@+id/ma_rectangle" />

        <ImageView
            android:layout_width="@dimen/shapesPopupShapeWidth"
            android:layout_height="@dimen/shapesPopupShapeHeight"
            android:id="@+id/ma_oval" />
        
        <ImageView
            android:layout_width="@dimen/shapesPopupShapeWidth"
            android:layout_height="@dimen/shapesPopupShapeHeight"
            android:id="@+id/ma_triangle" />
        
        <ImageView
            android:id="@+id/ma_star"
            android:layout_width="@dimen/shapesPopupShapeWidth"
            android:layout_height="@dimen/shapesPopupShapeHeight" />
    </GridLayout>

