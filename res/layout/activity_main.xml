<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    android:background="@color/white"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:id="@+id/metaAppText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerInParent="true"
	    android:orientation="horizontal"
        >
	    <TextView 
	        android:id="@+id/metaAppText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="100sp"
	        android:text="Meta"
	        android:textColor="@color/achalRed"
	        />
	    
	    <ImageView 
	        android:id="@+id/metaAppIcon"
		    android:layout_width="100dp"
		    android:layout_height="100dp"
		    android:layout_marginTop="15dp"
		    android:layout_marginRight="0dp"
		    android:layout_marginLeft="0dp"
		    android:background="@drawable/icon_black"
	        />
	    
	    <TextView 
	        android:id="@+id/metaTextPp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="100sp"
	        android:text="pp"
	        android:textColor="@color/achalRed"
	        />
    </LinearLayout>
    
    
    
    
    <TextView 
        android:id="@+id/swipeText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="20dp"
	    
	    android:textSize="30sp"
	    android:textAlignment="center"
        android:text="Change me."
        android:textColor="@color/achalRed"
        
        android:background="@color/whiteTrans"
        />
    
    <RelativeLayout 
        android:id="@+id/phone"
	    android:layout_width="400dp"
	    android:layout_height="wrap_content"
	    android:scaleType="center"
	    android:layout_below="@id/metaAppText"
	    android:layout_above="@id/swipeText"
	    android:layout_centerHorizontal="true"
	    android:adjustViewBounds="true"
        android:background="@drawable/androidphone"
        >
        
    </RelativeLayout>
    
    
    <!-- 
    <Button 
        android:id="@+id/newProjectButton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="New Project"      
        />
-->

</RelativeLayout>